<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Menggunakan stylesheet dari FXML Manajer untuk konsistensi gaya -->
<VBox spacing="20.0" styleClass="main-content-area" stylesheets="@task_management_style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="moomoo.apps.controller.KeuanganPemilikController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>
    <children>
        <!-- Judul dan Subjudul disesuaikan seperti FXML Manajer -->
        <Label text="Laporan Keuangan" styleClass="view-title" />
        <Label text="Laporan pemasukan, pengeluaran, dan penggajian peternakan." styleClass="view-subtitle" />

        <TabPane fx:id="keuanganTabPane" styleClass="tab-pane" VBox.vgrow="ALWAYS">
            <tabs>
                <!-- ==================== TAB PEMASUKAN ==================== -->
                <Tab closable="false" text="Pemasukan">
                    <content>
                        <VBox spacing="20">
                            <!-- Wrapper untuk bagian riwayat, meniru style Manajer -->
                            <VBox spacing="10" styleClass="task-column">
                                <Label text="Riwayat Pemasukan" styleClass="section-title" />
                                <HBox alignment="CENTER_RIGHT" spacing="10">
                                    <children>
                                        <ComboBox promptText="Bulan Ini" styleClass="combo-box" />
                                        <Button text="Export" styleClass="button-outline-small" />
                                    </children>
                                </HBox>
                                <TableView fx:id="tabelPemasukan" prefHeight="400.0" styleClass="table-view" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="kolomDeskripsiPemasukan" text="Deskripsi" />
                                        <TableColumn fx:id="kolomKategoriPemasukan" text="Kategori" />
                                        <TableColumn fx:id="kolomTanggalPemasukan" text="Tanggal" />
                                        <TableColumn fx:id="kolomJumlahPemasukan" text="Jumlah (Rp)" />
                                        <TableColumn fx:id="kolomMetodePemasukan" text="Metode" />
                                        <TableColumn fx:id="kolomCatatanPemasukan" text="Catatan" />
                                    </columns>
                                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                </TableView>
                            </VBox>
                        </VBox>
                    </content>
                </Tab>

                <!-- ==================== TAB PENGELUARAN ==================== -->
                <Tab closable="false" text="Pengeluaran">
                    <content>
                         <VBox spacing="20">
                            <VBox spacing="10" styleClass="task-column">
                                <Label text="Riwayat Pengeluaran" styleClass="section-title" />
                                <HBox alignment="CENTER_RIGHT" spacing="10">
                                    <children>
                                        <ComboBox promptText="Bulan Ini" styleClass="combo-box" />
                                        <Button text="Export" styleClass="button-outline-small" />
                                    </children>
                                </HBox>
                                <TableView fx:id="tabelPengeluaran" prefHeight="400.0" styleClass="table-view" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="kolomDeskripsiPengeluaran" text="Deskripsi" />
                                        <TableColumn fx:id="kolomKategoriPengeluaran" text="Kategori" />
                                        <TableColumn fx:id="kolomTanggalPengeluaran" text="Tanggal" />
                                        <TableColumn fx:id="kolomJumlahPengeluaran" text="Jumlah (Rp)" />
                                        <TableColumn fx:id="kolomMetodePengeluaran" text="Metode" />
                                        <TableColumn fx:id="kolomCatatanPengeluaran" text="Catatan" />
                                    </columns>
                                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                </TableView>
                            </VBox>
                        </VBox>
                    </content>
                </Tab>

                <!-- ==================== TAB PENGGAJIAN ==================== -->
                <Tab closable="false" text="Penggajian">
                    <content>
                         <VBox spacing="20">
                            <VBox spacing="10" styleClass="task-column">
                                <Label text="Riwayat Penggajian" styleClass="section-title" />
                                <HBox alignment="CENTER_RIGHT" spacing="10">
                                    <children>
                                        <ComboBox promptText="Bulan Ini" styleClass="combo-box" />
                                        <Button text="Export" styleClass="button-outline-small" />
                                    </children>
                                </HBox>
                                <TableView fx:id="tabelPenggajian" prefHeight="400.0" styleClass="table-view" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <!-- Nama kolom disesuaikan dengan Controller Pemilik -->
                                        <TableColumn fx:id="kolomDeskripsiGaji" text="Deskripsi" />
                                        <TableColumn fx:id="kolomKategoriGaji" text="Kategori" />
                                        <TableColumn fx:id="kolomTanggalGaji" text="Tanggal" />
                                        <TableColumn fx:id="kolomJumlahGaji" text="Jumlah (Rp)" />
                                        <TableColumn fx:id="kolomMetodeGaji" text="Metode" />
                                        <TableColumn fx:id="kolomCatatanGaji" text="Catatan" />
                                    </columns>
                                     <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                </TableView>
                            </VBox>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>
